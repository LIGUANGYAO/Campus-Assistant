page{
  /* background-color:#E6E6E6;  */
  background-color: white;
  padding-bottom: 15rpx;
}
.container{
  padding-top: 100rpx;
  padding-left: 15rpx;
}
.input{
  /* border-bottom: 1px solid rgb(86, 86, 255); */
  font-size: 15px;
  border-bottom: 1rpx solid rgba(128, 128, 128, 0.144);
}
.topic{
  width: 94%;
  height: 80rpx;
  margin: 0 auto;
  margin-top: 10rpx;
  font-size: 20px;
  font-weight: 700;
  line-height: 80rpx;
  color: rgb(41, 41, 41);
  /* background-color: white; */
  margin-left: 1%;
  padding-left: 2%;
}
.author{
  width: 94%;
  height: 75rpx;
  margin: 0 auto;
  margin-top: 10rpx;
  background-color: white;
  margin-left: 1%;
  color: rgb(41, 41, 41);
  padding-left: 2%;
}
.content{
  width: 94%;
  height: 300rpx;
  margin: 0 auto;
  margin-top: 10rpx;
  margin-left: 1%;
  padding-left: 2%;
  font-size: 15px;
  color: rgb(41, 41, 41);
  background-color: white;
  /* border-bottom: 1px solid rgb(86, 86, 255); */

}
.hide{
  display: none;
}
.picker{
  width: 94%;
  height: 80rpx;
  line-height: 80rpx;
  font-weight: 700;
  margin: 0 auto;
  background-color: white;
  margin-left: 1%;
  padding-left: 2%;
  color: rgb(54, 54, 54);
  border-bottom: 1rpx solid rgba(128, 128, 128, 0.144);
}
.sign-text{
  margin-top: 10rpx;
  margin-left: 2%;
  font-weight: 600;
}
.course{
  width: 100%;
}
.course-a{
  width: 33%;
  color: rgb(39, 39, 39);
}
.img-seclet{
  width: 94%;
  height: 80rpx;
  margin-top: 15rpx;
  margin-left: 1%;
  padding-left: 2%;
  background-color: white;
  text-align: center;
  line-height: 80rpx;
  font-weight: 700;
  color: rgb(54, 54, 54);
}
.q-image-wrap{
  width: 96%;
  height: 360rpx;
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
  margin-left: 1%;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  z-index: 1;
}
.q-image{
  width: 100%;
  height: 400rpx;
}
.q-image-remover{
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  color: red;
}
.publish{
  width: 50%;
  height: 80rpx;
  background-color: rgba(86, 86, 255,0);
  line-height: 80rpx;
  color: rgb(0, 148, 0);
  border: 1px solid rgb(0, 148, 0);
  margin-top: 10px;
}
.publish:hover{
  color: white;
  background-color: rgb(0, 148, 0);
}
.tip{
  width: 94%;
  margin: 0 auto;
  padding-left: 20rpx; 
  font-size: 12px;
  color: rgb(65, 65, 65);
  margin-top: 20rpx;
  word-break: break-all;
}
.course-container{
  width: 100%;
}
.course-i{
  width: 40%;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 10rpx;
  margin-left: 6%;
  margin-top: 5rpx;
  float: left;
  border: 1px solid green;
  color: green;
}
.course-i:hover{
  background-color: green;
  color: white;
}
.image{
  width: 96%;
  height: 400rpx;
  margin: 10rpx auto;
  border-radius: 10rpx;
  background-color: rgba(255, 255, 0,0.5);
}
