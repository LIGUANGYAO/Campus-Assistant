page{
  background:url('http://www.xztywss.top/img/luntan/articlebgm1.jpg');
  background-size: 100% 100%;
  background-attachment: fixed;
}
.title{
  width: 92%;
  padding-left: 8%;
  margin-top: 5rpx;
  font-size: 18px;
  line-height: 80rpx;
  font-weight: 600;
  color: rgb(59, 59, 59);
  animation: demo2 1.2s;
}
.author{
  width: 93%;
  font-size: 13px;
  color: rgb(75, 75, 75);
  text-align: right;
  animation: demo2 1.2s;
}
.contents{
  width: 88%;
  margin: 0 auto;
  margin-top: 10rpx;
  font-size: 14px;
  line-height: 50rpx;
  color: rgb(58, 58, 58);
  animation: demo2 1.2s;
}
.formation{
  margin-top: 15rpx;
}
.more{
  width: 15%;
  height: 45rpx;
  line-height: 45rpx;
  text-align: center;
  font-size: 16px;
  position: fixed;
  border-radius: 5rpx;
  overflow: hidden;
  right: 4%;
  bottom: 30rpx;
  font-weight: 700;
  color: #64B4FF;
  border: 2px solid #64B4FF;
}
.more:hover{
  background-color: #64B4FF;
  color: white;
}
.moreformation{
  width: 92%;
  position: fixed;
  right: 4%;
  border-radius: 8rpx;
  overflow: hidden;
  bottom: 85rpx;
  animation: demo1 1s;
  box-shadow:  0 0 20rpx 0 rgb(136, 136, 136);
  margin: 0 auto;
}
@keyframes demo1{
  from{
    width: 0;
    right: 50%;
  }to {
    width: 92%;
    right: 4%;
  }
}
.demo{
  width: 96%;
  height: 70rpx;
  padding-left: 4%;
  line-height: 70rpx;
  color: rgb(90, 90, 90);
  border-bottom: 1rpx dotted rgba(100, 180, 255, 0.466);
  animation: demo2 1.7s;
  background-color: white;
}
@keyframes demo2{
  from{
    color: white;
  }to {
    color: rgb(90, 90, 90);
  }
}
.demo:hover{
  background-color: #64B4FF;
  color: white;
}
.last{
  border-bottom: none;
}