.image{
  width: 96%;
  height: 400rpx;
  margin: 10rpx auto;
  border-radius: 10rpx;
  background-color: rgba(255, 255, 0,0.5);
}
.hasvalue{
  width: 250rpx;
  height: 250rpx;
  margin: 0 auto;
  margin-top: 200rpx;
}
.hasimg{
  width: 250rpx;
  height: 250rpx;
  margin: 0 auto;
}
.hastext{
  width: 100%;
  height: 70rpx;
  color: rgb(184, 184, 184);
  text-align: center;
  line-height: 70rpx;
  font-size: 16px;
}
.juddelete{
  width: 120rpx;
  height: 70rpx;
  position: fixed;
  line-height: 70rpx;
  text-align: center;
  background-color: rgb(240, 0, 0);
  /* box-shadow: 0 0 5px 0 red inset; */
  box-shadow: rgba(255,255,255,0.25) 0px 1px 0px, inset rgba(255,255,255,0.25) 0px 1px 0px, inset rgba(0,0,0,0.25) 0px 0px 0px, inset rgba(255,255,255,0.03) 0px 20px 0px, inset rgba(0,0,0,0.15) 0px -20px 20px, inset rgba(255,255,255,0.05) 0px 20px 20px;
  border-radius: 15rpx;
  color: white;
  bottom: 20px;
  right: 10px;
}
.pageit{
  width: 100%;
  height: 80rpx;
  margin-top: 20rpx;
  /* background-color: blueviolet; */
}
.loadmore{
  width: 80%;
  height: 100%;
  line-height: 80rpx;
  text-align: center;
  margin: 0 auto;
  font-weight: 600;
  color:  rgb(141, 141, 141);
}
