page{
  background-color: #FFFFFF;
  border-top: 1px solid rgb(223, 223, 223);
  padding-bottom: 20rpx;
}
.textarea{
  width: 96%;
  height: 100%;
  margin: 0 auto;
  margin-top: 15rpx;
  border-radius: 10rpx;
  background-color:white;
  box-shadow: 0 0 8px 0 rgb(196, 196, 196);
  overflow: hidden;
}
.topic{
  width: 94%;
  height:60rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
}
.topic-text{
  width: 90%;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 2%;
  font-size: 18px;
  font-weight: 700;
  color: rgb(39, 39, 39);
}
.text-img-a{
  font-weight: 300;
  font-size: 13px;
  color: orangered;
}
.solved{
  width: 9%;
  height: 45rpx;
  background-repeat: no-repeat;
  float: right;
} 
.delete{
  width: 9%;
  height: 45rpx;
  background-repeat: no-repeat;
  float: right;
}
.content{
  width: 94%;
  font-size: 13px;
  line-height: 18px;
  font-weight: 500;
  padding-left: 3%;
  margin: 0 auto;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  color: rgb(34, 34, 34);
} 
.content-img{
  width: 300rpx;
  height: 200rpx;
  background-color: white;
  margin-bottom: 10rpx;
  margin-left: 35rpx;
  border-radius: 5rpx;
}
