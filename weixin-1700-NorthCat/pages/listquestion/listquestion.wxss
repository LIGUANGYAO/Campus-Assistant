page{
  background-color:white;
}
.textarea{
  width: 100%;
  height: 100%;
  background-color:white;
  overflow: hidden;
}
.textraea:hover{
  background-color: rgb(233, 233, 233);
}
.topic{
  width: 94%;
  height:60rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid rgb(199, 199, 199);
}
.topic-text{
  width: 80%;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 2%;
  font-size: 18px;
  font-weight: 700;
  color: rgb(39, 39, 39);
}
.solved{
  width: 9%;
  height: 45rpx;
  background-repeat: no-repeat;
  float: right;
} 
.delete{
  width: 9%;
  height: 45rpx;
  background-repeat: no-repeat;
  float: right;
}
.content{
  width: 94%;
  font-size: 13px;
  line-height: 18px;
  font-weight: 500;
  padding-left: 2%;
  margin: 0 auto;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  color: rgb(34, 34, 34);
} 
.blank{
  width: 100%;
  height: 20rpx;
  background-color: rgb(221, 221, 221);
}
.image{
  width: 96%;
  height: 400rpx;
  margin: 10rpx auto;
  border-radius: 10rpx;
  background-color: rgba(255, 255, 0,0.5);
}
.hasvalue{
  width: 250rpx;
  height: 320rpx;
  margin: 200rpx auto;
}
.hasimg{
  width: 250rpx;
  height: 250rpx;
  background: url("http://www.xztywss.top/img/luntan/pure.png");
  background-size: 250rpx 250rpx;
}
.hastext{
  width: 100%;
  height: 70rpx;
  color: rgb(184, 184, 184);
  text-align: center;
  line-height: 70rpx;
  font-size: 16px;
}