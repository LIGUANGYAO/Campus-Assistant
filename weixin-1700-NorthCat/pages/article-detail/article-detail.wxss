.showelement{
  width: 30%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  margin: 20rpx auto;
  color: white;
  border-radius: 10rpx;
  background-color: rgb(0, 165, 0);
}
.container{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  border-top: 1rpx solid rgb(197, 197, 197);
  border-bottom: 1rpx solid rgb(197, 197, 197);
}
.tip{
  width: 20%;
  height: 80rpx;
  font-size: 14px;
  font-weight: 500;
  line-height: 80rpx;
  color: rgb(87, 87, 87);
  padding-left: 2%;
}
.textinput{
  width: 69%;
  height: 80rpx;
  font-size: 14px;
  font-weight: 500;
  line-height: 80rpx;
}
.deleteelement{
  width: 6%;
  height: 45rpx;
  margin-top: 16rpx;
  background: url('http://www.xztywss.top/img/luntan/delete2.png');
  background-size: 100% 100%;
}
.content{
  font-size: 13px;
  color: rgb(97, 97, 97);
  word-break: break-all;
  overflow: hidden;
}
.grid{
  position: fixed;
  width: 96%;
  height: 470rpx;
  left: 3%;
  bottom: 0;
  z-index: 2;
}
.info{
  width: 32%;
  height: 148rpx;
  border: 1rpx solid rgb(177, 177, 177);
  padding-top: 40rpx;
  float: left;
  background-color: rgb(218, 218, 218);
}
.info-image{
  width: 50%;
  height: 110rpx;
  margin: 0 auto;
}
.info-text{
  width: 100%;
  height: 50rpx;
  font-size: 12px;
  text-align: center;
  line-height: 50rpx;
}
.cancel{
  width: 94%;
  height: 79rpx;
  line-height: 79rpx;
  text-align: center;
  font-size: 18px;
  font-weight: 600;
  position: fixed;
  bottom: 0;
  border-top: 1rpx solid rgb(177, 177, 177);
  background-color: rgb(218, 218, 218);
}
.image{
  width: 96%;
  height: 400rpx;
  margin: 10rpx auto;
  border-radius: 10rpx;
  background-color: rgba(255, 255, 0,0.5);
}
.next{
  width: 20%;
  height: 140rpx;
  position: fixed;
  bottom: 80rpx;
  left: 550rpx;
  color: rgb(68, 68, 68);
  text-align: center;
  z-index: 3;
  animation: showbtn 2s;
  border-radius: 50%;
}